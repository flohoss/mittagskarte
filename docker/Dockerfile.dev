ARG V_GOLANG
FROM golang:${V_GOLANG}
RUN apt-get update -qq
# Image to webp convertion
RUN apt-get install -y libwebp-dev

RUN go install github.com/air-verse/air@latest
RUN go install github.com/swaggo/swag/cmd/swag@latest
COPY ./.air.toml .

WORKDIR /app
COPY ./go.mod .
COPY ./go.sum .
RUN go mod download
