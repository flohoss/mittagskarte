ARG V_GOLANG
FROM --platform=linux/amd64 golang:${V_GOLANG}
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    apt-transport-https ca-certificates curl gnupg libmagickwand-dev libmagickcore-dev imagemagick libmupdf-dev

RUN curl -fsSL https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome-archive-keyring.gpg
RUN echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome-archive-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" | tee /etc/apt/sources.list.d/google-chrome.list
RUN apt-get update && apt-get install -y google-chrome-stable

RUN apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN go install github.com/air-verse/air@latest
COPY ./.air.toml .
RUN go install github.com/swaggo/swag/cmd/swag@latest

ENV PATH="/root/go/bin:${PATH}"

COPY ./go.mod .
COPY ./go.sum .
RUN go mod download
